<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ReaderTheme" parent="AppThemeDayNight">
        <!-- Android 16 optimized reader theme -->
        <item name="android:statusBarColor">@color/darkest_trans80</item>
        <item name="android:navigationBarColor">@color/darkest_trans80</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="colorPrimaryDark">@color/darkest</item>
        <item name="colorPrimary">@color/darkest</item>
        <item name="colorOnPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        
        <!-- Android 16 enhanced features -->
        <item name="android:windowBlurBehindEnabled">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:background">@color/primary_material_dark</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="MyDarkToolbarTheme" parent="MyToolbarTheme">
        <item name="colorPrimaryDark">@color/darkest</item>
        <item name="colorPrimary">@color/darkest</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColorSecondary">@color/lightest</item>
        <item name="android:colorBackground">@color/darkest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/darker</item>
        <item name="colorAccent">@color/primaryDark</item>

        <item name="actionOverflowMenuStyle">@style/MyReaderPopupMenuTheme</item>

        <item name="popupTheme">@style/MyReaderPopupMenuTheme</item>
        <item name="android:popupTheme" tools:targetApi="lollipop">@style/MyReaderPopupMenuTheme</item>

        <item name="popupMenuStyle">@style/MyReaderPopupMenuTheme</item>
        <item name="android:popupMenuStyle">@style/MyReaderPopupMenuTheme</item>
    </style>

    <style name="MyReaderPopupMenuTheme" parent="MyPopupMenuTheme">
        <item name="colorControlActivated">@color/primaryDark</item>
    </style>
</resources>